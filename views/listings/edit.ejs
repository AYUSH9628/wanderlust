<%layout("/layouts/boilerplate")%>

<div class="row mt-2">
    <div class="col-8 offset-2">

    <h3>Edit your listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required/>
        <div class="invalid-feedback">Please inter unique title</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
             <textarea name="listing[description]" class="form-control" required><%=listing.description%> </textarea>
             <div class="invalid-feedback">Please inter short description</div>
        </div>
        <div class="mb-3">
            <p>Original image</p>
            <img src="<%=originalimageUrl %>"/>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-lable">Upload New Image</lable>
            <input type="file" name="listing[image]" value="<%=listing.image%>" class="form-control"/>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <lable for="price" class="form-lable">Price</lable>
                 <input type="number" name="listing[price]"  value="<%=listing.price%>" class="form-control" required/>
                 <div class="invalid-feedback">Enter some price</div>
            </div>
            <div class="mb-3 col-8">
                <lable for="country" class="form-lable">Country</lable>
                <input type="text" name="listing[country]"  value="<%=listing.country%>" class="form-control" required/>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable>
            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required/>
            <div class="invalid-feedback">Location name should be valid</div>
        </div>
     
        <br/>
        <button class="btn btn-dark edit-btn mb-2">Edit</button>
        <br/><br/>
    </form>
</div>
</div>